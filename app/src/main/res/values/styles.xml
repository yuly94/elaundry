        <item name="actionOverflowButtonStyle">@style/OverflowButton</item>
        <item name="homeAsUpIndicator">@drawable/ic_keyboard_arrow_left_white_24dp</item>
    </style>


    <!-- Set Custom Icon for Overflow Button in ActionBar -->
    <style name="OverflowButton" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_more_vert_white_24dp</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="background">@color/my_primary</item>
        <item name="logo">@drawable/ic_map_24dp</item>
        <item name="android:logo">@drawable/ic_map_24dp</item>

        <item name="displayOptions">useLogo|showHome|showTitle</item>
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>

        <!-- Support library compatibility -->
        <item name="titleTextStyle">@style/MyActionBarTitleText</item>
    </style>

    <!-- ActionBar etHarga text -->
    <style name="MyActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/my_icons</item>
        <!-- The textColor property is backward compatible with the Support Library -->
    </style>

    <!-- ActionBar tabs text -->
    <style name="MyActionBarTabText" parent="@style/Widget.AppCompat.ActionBar.TabText">
        <item name="android:textColor">@color/my_icons</item>
        <!-- The textColor property is backward compatible with the Support Library -->
    </style>

    <style name="PopupMenuListView" parent="@style/Widget.AppCompat.Light.ListView.DropDown">
        <item name="android:background">@color/my_primary</item>
    </style>

    <style name="MYAppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="MYAppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

