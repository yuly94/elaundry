
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent">


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/holo_blue_light"
                    android:minHeight="?attr/actionBarSize"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                    app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

                <TextView
                    android:text="nama :"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/title_nama"
                    android:layout_marginTop="@dimen/dimen_15dp"
                    android:layout_marginLeft="@dimen/dimen_15dp"
                    android:layout_marginRight="@dimen/dimen_15dp"
                    android:layout_marginBottom="@dimen/dimen_5dp"
                    android:textStyle="normal|bold" />

                <TextView
                    android:text="namanya"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_nama"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:layout_marginLeft="@dimen/dimen_15dp"
                    android:layout_marginBottom="@dimen/dimen_5dp"
                    android:layout_marginRight="@dimen/dimen_15dp" />

                <TextView
                    android:text="alamat :"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/title_alamat"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:layout_marginLeft="@dimen/dimen_15dp"
                    android:layout_marginBottom="@dimen/dimen_5dp"
                    android:layout_marginRight="@dimen/dimen_15dp"
                    android:textStyle="normal|bold" />

                <TextView
                    android:text="alamatnya"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_alamat"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:layout_marginLeft="@dimen/dimen_15dp"
                    android:layout_marginBottom="@dimen/dimen_5dp"
                    android:layout_marginRight="@dimen/dimen_15dp" />

                <TextView
                    android:text="no handphone :"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView2"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:layout_marginLeft="@dimen/dimen_15dp"
                    android:layout_marginBottom="@dimen/dimen_5dp"
                    android:layout_marginRight="@dimen/dimen_15dp"
                    android:textStyle="normal|bold" />

                <TextView
                    android:text="nohpnya"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_nohp"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:layout_marginLeft="@dimen/dimen_15dp"
                    android:layout_marginBottom="@dimen/dimen_5dp"
                    android:layout_marginRight="@dimen/dimen_15dp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="157dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="paket :"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_tit_paket"
                            android:layout_marginTop="@dimen/dimen_5dp"
                            android:layout_marginLeft="@dimen/dimen_15dp"
                            android:layout_marginBottom="@dimen/dimen_5dp"
                            android:layout_marginRight="@dimen/dimen_15dp"
                            android:textStyle="normal|bold" />

                        <TextView
                            android:text="paketnya"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_paket"
                            android:layout_marginTop="@dimen/dimen_5dp"
                            android:layout_marginLeft="@dimen/dimen_15dp"
                            android:layout_marginBottom="@dimen/dimen_5dp"
                            android:layout_marginRight="@dimen/dimen_15dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="harga :"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_tit_harga"
                            android:layout_marginTop="@dimen/dimen_5dp"
                            android:layout_marginLeft="@dimen/dimen_15dp"
                            android:layout_marginBottom="@dimen/dimen_5dp"
                            android:layout_marginRight="@dimen/dimen_15dp"
                            android:textStyle="normal|bold" />

                        <TextView
                            android:text="harganya"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_harga"
                            android:layout_marginTop="@dimen/dimen_5dp"
                            android:layout_marginLeft="@dimen/dimen_15dp"
                            android:layout_marginBottom="@dimen/dimen_5dp"
                            android:layout_marginRight="@dimen/dimen_15dp" />
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:text="jumlah baju :"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_tit_baju"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:layout_marginLeft="@dimen/dimen_15dp"
                    android:layout_marginBottom="@dimen/dimen_5dp"
                    android:layout_marginRight="@dimen/dimen_15dp"
                    android:textStyle="normal|bold" />

                <TextView
                    android:text="jumlah bajunya"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_baju"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:layout_marginLeft="@dimen/dimen_15dp"
                    android:layout_marginBottom="@dimen/dimen_5dp"
                    android:layout_marginRight="@dimen/dimen_15dp" />

                <TextView
                    android:text="jumlah celana :"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_tit_celana"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:layout_marginLeft="@dimen/dimen_15dp"
                    android:layout_marginBottom="@dimen/dimen_5dp"
                    android:layout_marginRight="@dimen/dimen_15dp"
                    android:textStyle="normal|bold" />

                <TextView
                    android:text="celananya"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_celana"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:layout_marginLeft="@dimen/dimen_15dp"
                    android:layout_marginBottom="@dimen/dimen_5dp"
                    android:layout_marginRight="@dimen/dimen_15dp" />

                <TextView
                    android:text="jumlah rok :"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_tit_rok"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:layout_marginLeft="@dimen/dimen_15dp"
                    android:layout_marginBottom="@dimen/dimen_5dp"
                    android:layout_marginRight="@dimen/dimen_15dp"
                    android:textStyle="normal|bold" />

                <TextView
                    android:text="roknya"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_rok"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:layout_marginLeft="@dimen/dimen_15dp"
                    android:layout_marginBottom="@dimen/dimen_5dp"
                    android:layout_marginRight="@dimen/dimen_15dp" />

                <TextView
                    android:text="status melaundry :"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_tit_tanggal"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:layout_marginLeft="@dimen/dimen_15dp"
                    android:layout_marginBottom="@dimen/dimen_5dp"
                    android:layout_marginRight="@dimen/dimen_15dp"
                    android:textStyle="normal|bold" />

                <TextView
                    android:text="tanggalnya"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_tanggal"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:layout_marginLeft="@dimen/dimen_15dp"
                    android:layout_marginBottom="@dimen/dimen_5dp"
                    android:layout_marginRight="@dimen/dimen_15dp" />

                <TextView
                    android:text="status laundry :"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_tit_status"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:layout_marginLeft="@dimen/dimen_15dp"
                    android:layout_marginBottom="@dimen/dimen_5dp"
                    android:layout_marginRight="@dimen/dimen_15dp"
                    android:textStyle="normal|bold" />

                <TextView
                    android:text="statusnya"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_status"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:layout_marginLeft="@dimen/dimen_15dp"
                    android:layout_marginBottom="@dimen/dimen_5dp"
                    android:layout_marginRight="@dimen/dimen_15dp" />



            </LinearLayout>
        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>
