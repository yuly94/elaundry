<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:layout_scrollFlags="scroll|enterAlways|snap"/>



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="?attr/actionBarSize">

        <TextView
            android:id="@+id/welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Silahkan download peta dulu"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="14sp"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:layout_marginBottom="@dimen/dimen_10dp" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Peta di handphone :" />

        <Spinner
            android:id="@+id/locale_area_spinner"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginBottom="@dimen/dimen_10dp"
            android:layout_marginTop="@dimen/dimen_10dp" />

        <Button
            android:id="@+id/locale_button"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="pilih"
            android:elevation="1dp"
            android:layout_marginBottom="@dimen/dimen_15dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Peta di server :" />

        <Spinner
            android:id="@+id/remote_area_spinner"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:layout_marginBottom="@dimen/dimen_10dp" />

        <Button
            android:id="@+id/remote_button"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Download" />

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>